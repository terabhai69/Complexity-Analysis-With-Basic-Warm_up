#include <stdio.h>
#include <stdlib.h>

int main()
{
    int t;
    scanf("%d",&t);
    while(t--)
    {
        int no,j,I,N,Q;
        scanf("%d",&no);
        while(no--)
        {
            scanf("%d %d %d",&I,&N,&Q);
            if(N % 2 == 0)
                printf("%d\n",N/2);
            else
            {
                if(Q == I)
                    printf("%d\n",N/2);
                else
                    printf("%d\n",N/2+1);
            }
        }
    }
    return 0;
}
